@model TicketManagementApp.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketManagementApp</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .register-container {
            width: 100%;
            max-width: 100%;
            padding: 0 2rem;
        }

        .register-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            max-width: 900px;
            margin: 0 auto;
        }

        .register-header {
            background: white;
            padding: 2rem 2rem 1.5rem;
            text-align: center;
            border-bottom: 1px solid #e2e8f0;
        }

        .register-icon {
            width: 64px;
            height: 64px;
            background: #eff6ff;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.25rem;
            font-size: 1.75rem;
            color: #2563eb;
        }

        .register-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #0f172a;
        }

        .register-subtitle {
            font-size: 0.9rem;
            color: #64748b;
        }

        .register-body {
            padding: 2rem;
        }

        .form-layout {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .form-group-full {
            grid-column: 1 / -1;
        }

        .form-group {
            margin-bottom: 1.25rem;
        }

        .form-label {
            display: block;
            font-weight: 500;
            color: #334155;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

            .form-label .required {
                color: #dc2626;
            }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 0.875rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1rem;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 0.875rem 0.75rem 2.75rem;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 0.9rem;
            transition: all 0.2s ease;
            background: #f8fafc;
        }

            .form-control:focus {
                outline: none;
                border-color: #2563eb;
                background: white;
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

            .form-control::placeholder {
                color: #cbd5e1;
            }

        .password-strength {
            margin-top: 0.5rem;
            font-size: 0.85rem;
        }

        .strength-bar {
            height: 3px;
            background: #e2e8f0;
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .strength-fill {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak {
            width: 33%;
            background: #ef4444;
        }

        .strength-medium {
            width: 66%;
            background: #f59e0b;
        }

        .strength-strong {
            width: 100%;
            background: #10b981;
        }

        .strength-text {
            color: #64748b;
            font-weight: 500;
        }

        .btn-register {
            width: 100%;
            padding: 0.875rem;
            background: #2563eb;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

            .btn-register:hover {
                background: #1e40af;
            }

            .btn-register:active {
                transform: scale(0.98);
            }

        .divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .divider-text {
            color: #94a3b8;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .login-prompt {
            background: #f8fafc;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            padding: 1rem;
            text-align: center;
        }

        .login-text {
            color: #64748b;
            margin-bottom: 0.75rem;
            font-size: 0.85rem;
        }

        .btn-login {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.625rem 1.25rem;
            background: white;
            color: #2563eb;
            border: 1px solid #2563eb;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s ease;
            font-size: 0.85rem;
        }

            .btn-login:hover {
                background: #2563eb;
                color: white;
            }

        .alert {
            padding: 0.875rem;
            border-radius: 6px;
            margin-bottom: 1.25rem;
            display: flex;
            align-items: start;
            gap: 0.75rem;
            font-size: 0.85rem;
        }

        .alert-danger {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
        }

        .alert-icon {
            font-size: 1rem;
            flex-shrink: 0;
        }

        .alert-content {
            flex: 1;
        }

        .text-danger {
            color: #dc2626;
            font-size: 0.8rem;
            margin-top: 0.25rem;
            display: block;
        }

        .validation-summary {
            list-style: none;
            margin: 0;
        }

            .validation-summary li {
                margin-bottom: 0.25rem;
            }

        .password-requirements {
            background: #eff6ff;
            border: 1px solid #bfdbfe;
            border-radius: 6px;
            padding: 0.875rem;
            margin-top: 1rem;
            font-size: 0.8rem;
        }

        .requirements-title {
            font-weight: 600;
            color: #1e40af;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .requirements-list {
            list-style: none;
            color: #1e40af;
        }

            .requirements-list li {
                padding-left: 1.25rem;
                position: relative;
                margin-bottom: 0.25rem;
            }

                .requirements-list li:before {
                    content: "✓";
                    position: absolute;
                    left: 0;
                    font-weight: 700;
                }



        .form-layout {
            grid-template-columns: 1fr;
        }

        .form-group-full {
            grid-column: 1;
        }

        .register-header {
            padding: 2rem 1.5rem 1.5rem;
        }

        .register-body {
            padding: 1.5rem;
        }

        .register-title {
            font-size: 1.25rem;
        }

        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <div class="register-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h1 class="register-title">Créer un compte</h1>
                <p class="register-subtitle">Rejoignez-nous pour gérer vos tickets</p>
            </div>

            <div class="register-body">
                <form asp-action="Register" asp-controller="Users" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger">
                        <i class="fas fa-exclamation-circle alert-icon"></i>
                        <div class="alert-content">
                            <strong>Échec de l'inscription</strong>
                            <ul class="validation-summary"></ul>
                        </div>
                    </div>

                    <div class="form-layout">
                        <div class="form-group">
                            <label asp-for="FullName" class="form-label">
                                Nom complet <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-user input-icon"></i>
                                <input asp-for="FullName" class="form-control" placeholder="Jean Dupont" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                Adresse e-mail <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Email" class="form-control" placeholder="votre@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                Mot de passe <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="Password" class="form-control" placeholder="Créer un mot de passe" id="password" />
                            </div>
                            <div class="password-strength">
                                <div class="strength-bar">
                                    <div class="strength-fill" id="strengthBar"></div>
                                </div>
                                <div class="strength-text" id="strengthText">Entrez un mot de passe</div>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                Confirmer le mot de passe <span class="required">*</span>
                            </label>
                            <div class="input-wrapper">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmer votre mot de passe" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group-full">
                            <div class="password-requirements">
                                <div class="requirements-title">
                                    <i class="fas fa-shield-alt"></i>
                                    Exigences du mot de passe :
                                </div>
                                <ul class="requirements-list">
                                    <li>Au moins 6 caractères</li>
                                    <li>Mélange de lettres et chiffres recommandé</li>
                                    <li>Évitez les mots de passe courants</li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group-full">
                            <button type="submit" class="btn-register">
                                <i class="fas fa-user-check"></i>
                                Créer mon compte
                            </button>
                        </div>
                    </div>
                </form>

                <div class="divider">
                    <div class="divider-line"></div>
                    <span class="divider-text">Déjà inscrit ?</span>
                    <div class="divider-line"></div>
                </div>

                <div class="login-prompt">
                    <p class="login-text">
                        Vous avez déjà un compte ?
                    </p>
                    <a asp-action="Login" asp-controller="Users" class="btn-login">
                        <i class="fas fa-sign-in-alt"></i>
                        Se connecter
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        const passwordInput = document.getElementById('password');
        const strengthBar = document.getElementById('strengthBar');
        const strengthText = document.getElementById('strengthText');

        if (passwordInput) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;

                if (password.length === 0) {
                    strengthBar.className = 'strength-fill';
                    strengthText.textContent = 'Entrez un mot de passe';
                    return;
                }

                if (password.length >= 6) strength++;
                if (password.length >= 10) strength++;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
                if (/\d/.test(password)) strength++;
                if (/[^a-zA-Z0-9]/.test(password)) strength++;

                if (strength <= 2) {
                    strengthBar.className = 'strength-fill strength-weak';
                    strengthText.textContent = 'Mot de passe faible';
                    strengthText.style.color = '#ef4444';
                } else if (strength <= 3) {
                    strengthBar.className = 'strength-fill strength-medium';
                    strengthText.textContent = 'Force moyenne';
                    strengthText.style.color = '#f59e0b';
                } else {
                    strengthBar.className = 'strength-fill strength-strong';
                    strengthText.textContent = 'Mot de passe fort';
                    strengthText.style.color = '#10b981';
                }
            });
        }
    </script>
</body>
</html>