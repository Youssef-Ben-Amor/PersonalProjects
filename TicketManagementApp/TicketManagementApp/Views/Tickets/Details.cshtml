@model TicketManagementApp.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .breadcrumb-nav {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        font-size: 0.85rem;
        margin-bottom: 1rem;
    }

        .breadcrumb-nav a {
            color: #2563eb;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .breadcrumb-nav a:hover {
                color: #1e40af;
            }

    .page-title-container {
        display: flex;
        justify-content: space-between;
        align-items: start;
        gap: 1rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #0f172a;
        margin: 0;
    }

    .ticket-actions {
        display: flex;
        gap: 0.625rem;
    }

    .details-container {
        display: grid;
        grid-template-columns: 1fr 320px;
        gap: 1.5rem;
    }

    .main-details {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .ticket-header {
        background: #2563eb;
        padding: 1.75rem;
        color: white;
    }

    .ticket-id {
        font-size: 0.8rem;
        opacity: 0.9;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .ticket-title-large {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        line-height: 1.3;
    }

    .ticket-meta {
        display: flex;
        gap: 1.5rem;
        font-size: 0.85rem;
        opacity: 0.95;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .ticket-body {
        padding: 1.75rem;
    }

    .detail-section {
        margin-bottom: 1.75rem;
    }

    .section-label {
        font-size: 0.8rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.75rem;
    }

    .section-content {
        font-size: 0.95rem;
        color: #0f172a;
        line-height: 1.6;
    }

    .description-box {
        background: #f8fafc;
        padding: 1.25rem;
        border-radius: 6px;
        border: 1px solid #e2e8f0;
    }

    .sidebar-card {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        padding: 1.25rem;
        height: fit-content;
        position: sticky;
        top: 2rem;
    }

    .sidebar-section {
        margin-bottom: 1.25rem;
        padding-bottom: 1.25rem;
        border-bottom: 1px solid #f1f5f9;
    }

        .sidebar-section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .sidebar-label {
        font-size: 0.7rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.625rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        width: 100%;
        justify-content: center;
    }

    .status-open {
        background: #dbeafe;
        color: #2563eb;
    }

    .status-inprogress {
        background: #fef3c7;
        color: #f59e0b;
    }

    .status-resolved {
        background: #d1fae5;
        color: #10b981;
    }

    .status-closed {
        background: #f3f4f6;
        color: #6b7280;
    }

    .urgency-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        width: 100%;
        justify-content: center;
    }

    .urgency-1 {
        background: #dcfce7;
        color: #16a34a;
    }

    .urgency-2 {
        background: #fef3c7;
        color: #d97706;
    }

    .urgency-3 {
        background: #fed7aa;
        color: #f97316;
    }

    .urgency-4 {
        background: #fee2e2;
        color: #ef4444;
    }

    .urgency-5 {
        background: #fecaca;
        color: #dc2626;
    }

    .category-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        border: 1px solid;
        width: 100%;
        justify-content: center;
    }

    .category-bug {
        background: #fef2f2;
        color: #dc2626;
        border-color: #fecaca;
    }

    .category-improvement {
        background: #eff6ff;
        color: #2563eb;
        border-color: #bfdbfe;
    }

    .category-access {
        background: #fffbeb;
        color: #d97706;
        border-color: #fde68a;
    }

    .category-feature {
        background: #faf5ff;
        color: #9333ea;
        border-color: #e9d5ff;
    }

    .user-card {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem;
        background: #f8fafc;
        border-radius: 6px;
        border: 1px solid #e2e8f0;
    }

    .user-avatar-large {
        width: 40px;
        height: 40px;
        border-radius: 6px;
        background: #2563eb;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .user-info {
        flex: 1;
    }

    .user-name {
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 0.15rem;
        font-size: 0.9rem;
    }

    .user-role {
        font-size: 0.7rem;
        color: #64748b;
    }

    .btn {
        padding: 0.625rem 1.25rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        justify-content: center;
    }

    .btn-edit {
        background: #fffbeb;
        color: #d97706;
        border: 1px solid #fde68a;
    }

        .btn-edit:hover {
            background: #fef3c7;
        }

    .btn-delete {
        background: #fef2f2;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

        .btn-delete:hover {
            background: #fee2e2;
        }

    .btn-back {
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

        .btn-back:hover {
            background: #e2e8f0;
        }

    .action-buttons {
        display: flex;
        gap: 0.625rem;
        margin-top: 1.25rem;
    }



    .sidebar-card {
        position: static;
    }

    .page-title-container {
        flex-direction: column;
        align-items: start;
    }

    }
</style>

<div class="page-header">
    <nav class="breadcrumb-nav">
        <a asp-action="Index">
            <i class="fas fa-ticket-alt"></i> Tickets
        </a>
        <span>/</span>
        <span>Détails</span>
    </nav>
    <div class="page-title-container">
        <h1 class="page-title">
            <i class="fas fa-file-alt"></i>
            Détails du Ticket
        </h1>
    </div>
</div>

<div class="details-container">
    <div class="main-details">
        <div class="ticket-header">
            <div class="ticket-id">TICKET #@Model.Id</div>
            <h2 class="ticket-title-large">@Model.Title</h2>
            <div class="ticket-meta">
                <div class="meta-item">
                    <i class="far fa-calendar-alt"></i>
                    <span>Créé le @Model.CreatedAt.ToString("dd MMM yyyy")</span>
                </div>
                <div class="meta-item">
                    <i class="far fa-clock"></i>
                    <span>@Model.CreatedAt.ToString("HH:mm")</span>
                </div>
            </div>
        </div>

        <div class="ticket-body">
            <div class="detail-section">
                <div class="section-label">
                    <i class="fas fa-align-left"></i> Description
                </div>
                <div class="description-box">
                    <div class="section-content">
                        @if (string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <em style="color: #94a3b8;">Aucune description fournie</em>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="sidebar-card">
        <div class="sidebar-section">
            <div class="sidebar-label">
                <i class="fas fa-info-circle"></i> Statut
            </div>
            @{
                var statusClass = Model.Status?.ToLower() switch
                {
                    "open" => "status-open",
                    "inprogress" => "status-inprogress",
                    "resolved" => "status-resolved",
                    "closed" => "status-closed",
                    _ => "status-open"
                };
                var statusText = Model.Status switch
                {
                    "Open" => "Ouvert",
                    "InProgress" => "En cours",
                    "Resolved" => "Résolu",
                    "Closed" => "Fermé",
                    _ => "Ouvert"
                };
                var statusIcon = Model.Status?.ToLower() switch
                {
                    "open" => "fa-folder-open",
                    "inprogress" => "fa-spinner",
                    "resolved" => "fa-check-circle",
                    "closed" => "fa-times-circle",
                    _ => "fa-folder-open"
                };
            }
            <span class="status-badge @statusClass">
                <i class="fas @statusIcon"></i>
                @statusText
            </span>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-label">
                <i class="fas fa-exclamation-triangle"></i> Niveau d'urgence
            </div>
            @{
                var urgencyClass = $"urgency-{Model.UrgencyLevel}";
                var urgencyText = Model.GetUrgencyLevelName();
            }
            <span class="urgency-badge @urgencyClass">
                <i class="fas fa-circle" style="font-size: 0.5rem;"></i>
                @urgencyText
            </span>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-label">
                <i class="fas fa-tag"></i> Catégorie
            </div>
            @{
                var categoryClass = Model.Category?.ToLower() switch
                {
                    "bug" => "category-bug",
                    "improvement" => "category-improvement",
                    "access" => "category-access",
                    "feature" => "category-feature",
                    _ => "category-bug"
                };
                var categoryIcon = Model.Category?.ToLower() switch
                {
                    "bug" => "fa-bug",
                    "improvement" => "fa-arrow-up",
                    "access" => "fa-key",
                    "feature" => "fa-star",
                    _ => "fa-tag"
                };
            }
            <span class="category-badge @categoryClass">
                <i class="fas @categoryIcon"></i>
                @Model.Category
            </span>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-label">
                <i class="fas fa-user"></i> Créé par
            </div>
            <div class="user-card">
                <div class="user-avatar-large">
                    @(Model.CreatedByUser?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                </div>
                <div class="user-info">
                    <div class="user-name">@(Model.CreatedByUser?.UserName ?? "Utilisateur inconnu")</div>
                    <div class="user-role">Créateur</div>
                </div>
            </div>
        </div>

        <div class="sidebar-section">
            <div class="sidebar-label">
                <i class="fas fa-user-check"></i> Assigné à
            </div>
            <div class="user-card">
                <div class="user-avatar-large">
                    @(Model.AssignedToUser?.UserName?.Substring(0, 1).ToUpper() ?? "?")
                </div>
                <div class="user-info">
                    <div class="user-name">@(Model.AssignedToUser?.UserName ?? "Non assigné")</div>
                    <div class="user-role">Responsable</div>
                </div>
            </div>
        </div>
        @if (Model.CreatedByUserId == ViewBag.User.Id || ViewBag.Admin)
        {
        <div class="action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-edit" style="flex: 1;">
                <i class="fas fa-edit"></i>
                Modifier
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-delete" style="flex: 1;">
                <i class="fas fa-trash"></i>
                Supprimer
            </a>
        </div>
        }

        <div style="margin-top: 0.625rem;">
            <a asp-action="Index" class="btn btn-back" style="width: 100%;">
                <i class="fas fa-arrow-left"></i>
                Retour à la liste
            </a>
        </div>
    </div>
</div>