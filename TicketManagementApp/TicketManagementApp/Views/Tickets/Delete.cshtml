@model TicketManagementApp.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<style>
    .page-header {
        margin-bottom: 2rem;
    }

    .breadcrumb-nav {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        font-size: 0.85rem;
        margin-bottom: 1rem;
    }

        .breadcrumb-nav a {
            color: #2563eb;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .breadcrumb-nav a:hover {
                color: #1e40af;
            }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #0f172a;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .delete-container {
        max-width: 800px;
    }

    .warning-card {
        background: white;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .warning-header {
        background: #dc2626;
        padding: 1.75rem;
        text-align: center;
        color: white;
    }

    .warning-icon {
        font-size: 3rem;
        margin-bottom: 0.875rem;
    }

    .warning-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .warning-subtitle {
        font-size: 0.95rem;
        opacity: 0.95;
    }

    .warning-body {
        padding: 1.75rem;
    }

    .alert-box {
        background: #fef2f2;
        border: 1px solid #fecaca;
        padding: 1.25rem;
        border-radius: 6px;
        margin-bottom: 1.75rem;
        display: flex;
        gap: 0.875rem;
    }

    .alert-icon {
        color: #dc2626;
        font-size: 1.25rem;
        flex-shrink: 0;
    }

    .alert-content {
        flex: 1;
    }

    .alert-title {
        font-weight: 600;
        color: #991b1b;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .alert-text {
        color: #991b1b;
        line-height: 1.6;
        font-size: 0.9rem;
    }

    .ticket-preview {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        padding: 1.25rem;
    }

    .preview-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .preview-title {
        font-size: 1.15rem;
        font-weight: 600;
        color: #0f172a;
        margin-bottom: 0.375rem;
    }

    .preview-id {
        font-size: 0.8rem;
        color: #64748b;
    }

    .preview-badges {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.25rem;
    }

    .detail-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .detail-label {
        font-size: 0.7rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .detail-value {
        font-weight: 500;
        color: #0f172a;
        font-size: 0.9rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.375rem 0.625rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-open {
        background: #dbeafe;
        color: #2563eb;
    }

    .status-inprogress {
        background: #fef3c7;
        color: #f59e0b;
    }

    .status-resolved {
        background: #d1fae5;
        color: #10b981;
    }

    .status-closed {
        background: #f3f4f6;
        color: #6b7280;
    }

    .urgency-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.375rem 0.625rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .urgency-1 {
        background: #dcfce7;
        color: #16a34a;
    }

    .urgency-2 {
        background: #fef3c7;
        color: #d97706;
    }

    .urgency-3 {
        background: #fed7aa;
        color: #f97316;
    }

    .urgency-4 {
        background: #fee2e2;
        color: #ef4444;
    }

    .urgency-5 {
        background: #fecaca;
        color: #dc2626;
    }

    .category-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        padding: 0.375rem 0.625rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 600;
        border: 1px solid;
    }

    .category-bug {
        background: #fef2f2;
        color: #dc2626;
        border-color: #fecaca;
    }

    .category-improvement {
        background: #eff6ff;
        color: #2563eb;
        border-color: #bfdbfe;
    }

    .category-access {
        background: #fffbeb;
        color: #d97706;
        border-color: #fde68a;
    }

    .category-feature {
        background: #faf5ff;
        color: #9333ea;
        border-color: #e9d5ff;
    }

    .form-actions {
        display: flex;
        gap: 0.875rem;
        padding-top: 1.75rem;
    }

    .btn {
        padding: 0.75rem 1.75rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        justify-content: center;
        flex: 1;
    }

    .btn-danger {
        background: #dc2626;
        color: white;
    }

        .btn-danger:hover {
            background: #b91c1c;
        }

    .btn-secondary {
        background: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }

        .btn-secondary:hover {
            background: #e2e8f0;
            color: #475569;
        }



    .preview-header {
        flex-direction: column;
        gap: 1rem;
    }

    .form-actions {
        flex-direction: column-reverse;
    }

    }
</style>

<div class="page-header">
    <nav class="breadcrumb-nav">
        <a asp-action="Index">
            <i class="fas fa-ticket-alt"></i> Tickets
        </a>
        <span>/</span>
        <span>Supprimer</span>
    </nav>
    <h1 class="page-title">
        <i class="fas fa-trash-alt"></i>
        Supprimer le Ticket
    </h1>
</div>

<div class="delete-container">
    <div class="warning-card">
        <div class="warning-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2 class="warning-title">Confirmer la suppression</h2>
            <p class="warning-subtitle">Cette action est irréversible</p>
        </div>

        <div class="warning-body">
            <div class="alert-box">
                <div class="alert-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="alert-content">
                    <div class="alert-title">Êtes-vous sûr de vouloir supprimer ce ticket ?</div>
                    <div class="alert-text">
                        Une fois supprimé, ce ticket et toutes ses données associées seront définitivement retirés du système. Cette action ne peut pas être annulée.
                    </div>
                </div>
            </div>

            <div class="ticket-preview">
                <div class="preview-header">
                    <div>
                        <div class="preview-id">TICKET #@Model.Id</div>
                        <div class="preview-title">@Model.Title</div>
                    </div>
                    <div class="preview-badges">
                        @{
                            var statusClass = Model.Status?.ToLower() switch
                            {
                                "open" => "status-open",
                                "inprogress" => "status-inprogress",
                                "resolved" => "status-resolved",
                                "closed" => "status-closed",
                                _ => "status-open"
                            };
                            var statusText = Model.Status switch
                            {
                                "Open" => "Ouvert",
                                "InProgress" => "En cours",
                                "Resolved" => "Résolu",
                                "Closed" => "Fermé",
                                _ => "Ouvert"
                            };
                            var statusIcon = Model.Status?.ToLower() switch
                            {
                                "open" => "fa-folder-open",
                                "inprogress" => "fa-spinner",
                                "resolved" => "fa-check-circle",
                                "closed" => "fa-times-circle",
                                _ => "fa-folder-open"
                            };

                            var urgencyClass = $"urgency-{Model.UrgencyLevel}";
                            var urgencyText = Model.UrgencyLevel switch
                            {
                                1 => "Faible",
                                2 => "Moyen",
                                3 => "Élevé",
                                4 => "Urgent",
                                5 => "Critique",
                                _ => "Faible"
                            };

                            var categoryClass = Model.Category?.ToLower() switch
                            {
                                "bug" => "category-bug",
                                "improvement" => "category-improvement",
                                "access" => "category-access",
                                "feature" => "category-feature",
                                _ => "category-bug"
                            };
                            var categoryIcon = Model.Category?.ToLower() switch
                            {
                                "bug" => "fa-bug",
                                "improvement" => "fa-arrow-up",
                                "access" => "fa-key",
                                "feature" => "fa-star",
                                _ => "fa-tag"
                            };
                        }
                        <span class="status-badge @statusClass">
                            <i class="fas @statusIcon"></i>
                            @statusText
                        </span>
                        <span class="urgency-badge @urgencyClass">
                            <i class="fas fa-circle" style="font-size: 0.4rem;"></i>
                            @urgencyText
                        </span>
                        <span class="category-badge @categoryClass">
                            <i class="fas @categoryIcon"></i>
                            @Model.Category
                        </span>
                    </div>
                </div>

                <div class="detail-grid">
                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="fas fa-align-left"></i> Description
                        </div>
                        <div class="detail-value">
                            @if (string.IsNullOrWhiteSpace(Model.Description))
                            {
                                <em style="color: #94a3b8;">Aucune description fournie</em>
                            }
                            else
                            {
                                @Model.Description
                            }
                        </div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="far fa-calendar-alt"></i> Date de création
                        </div>
                        <div class="detail-value">@Model.CreatedAt.ToString("dd MMMM yyyy 'à' HH:mm")</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="fas fa-user"></i> Créé par
                        </div>
                        <div class="detail-value">@(Model.CreatedByUser?.UserName ?? "Inconnu")</div>
                    </div>

                    <div class="detail-item">
                        <div class="detail-label">
                            <i class="fas fa-user-check"></i> Assigné à
                        </div>
                        <div class="detail-value">@(Model.AssignedToUser?.UserName ?? "Non assigné")</div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                        Oui, supprimer ce ticket
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>